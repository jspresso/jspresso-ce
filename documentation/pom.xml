      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-antrun-plugin</artifactId>
        <executions>
          <execution>
            <id>push-generated-markdown</id>
            <phase>install</phase>
            <goals>
              <goal>run</goal>
            </goals>
            <configuration>
              <target>
                <property name="gitbook-root" value="${basedir}/../../jspresso-doc" />
                <copy todir="${gitbook-root}">
                  <fileset dir="${project.build.directory}/staging/reference">
                    <include name="**/*.md" />
                    <include name="**/*.jpg" />
                    <include name="**/*.JPG" />
                    <include name="**/*.png" />
                    <include name="**/*.PNG" />
                  </fileset>
                </copy>
                <exec executable="git" dir="${gitbook-root}" failonerror="false">
                  <arg line="pull" />
                </exec>
                <exec executable="git" dir="${gitbook-root}" failonerror="false">
                  <arg line="add *" />
                </exec>
                <exec executable="git" dir="${gitbook-root}" failonerror="false">
                  <arg line="commit -a -m 'Generated documentation updated'" />
                </exec>
                <exec executable="git" dir="${gitbook-root}" failonerror="false">
                  <arg line="push" />
                </exec>
              </target>
            </configuration>
          </execution>
        </executions>
      </plugin>
